<div class="en-daypicker-month">
  {{month.name}} {{year}}
</div>

<button {{action "previousMonth"}}>Previous month</button>
<button {{action "nextMonth"}}>Next month</button>

<div class="en-daypicker-header">
  {{#each-in weekDays as |abbr expanded|}}
    <abbr class="en-daypicker-header-day" title="{{expanded}}">
      {{abbr}}
    </abbr>
  {{/each-in}}
</div>

{{#each weeksArray as |week|}}
  <div class="en-daypicker-week">
    {{#each week as |day|}}
      <div {{action "didSelectDate" day on="click" bubbles=false}}
          class="en-daypicker-day 
                {{unless (isThisMonth day=day month=month) 'is-disabled'}}
                {{if (isThisDay day=day date=date) 'is-selected'}}
                {{if (isThisDay day=day date=today) 'is-today'}}">
        {{en-date-format date=day}}
      </div>
    {{/each}}
  </div>
{{/each}}
